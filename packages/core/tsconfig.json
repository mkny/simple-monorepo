{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
		"noEmit": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/example/*",
		"src/**/*.test.tsx",
		"src/**/*.test.ts",
		"src/unit-test/*",
    "*.d.ts",
		"src/setupTests.ts"
  ]
}
