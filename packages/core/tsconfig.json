{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/example/*",
		"src/**/*.test.tsx",
		"src/**/*.test.ts",
		"src/unit-test/*",
    "*.d.ts",
		"src/setupTests.ts"
  ]
}